<!DOCTYPE html>
<html lang="FR">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/h2o') }}" sizes="32x32">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#"><img src="{{ asset('img/h2o.png') }}" width="50px" class="logonavbar"  alt="Logo Lamatch"></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav float-end">
                            <li class="nav-item">
                                <a class="nav-link" href="#">Tableau</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        {# ------------------------ Message flash ------------------- #}
        <main>
            {% block body %}{% endblock %}
            <div id="licorne" style="display: none"><img src="{{ asset('img/licorne.jpg') }}" alt="licorne"> </div>
        </main>


        <script>
            //pattern à rentrer
            var pattern = [ 'l', 'i','c','o','r','n','e'];
            //variable pour validation
            var current = 0;
            //récupère la div
            let licorne = document.querySelector('#licorne');
            /**
             * permet de valider ou non le pattern
             * et fait varier le style d'une div
             * @param event
             */
            var keyHandler = function (event) {
                // si le pattern n'est pas respecté, retour au début
                if (pattern.indexOf(event.key) < 0 || event.key !== pattern[current]) {
                    current = 0;
                    return;
                }
                //valide le pattern 1à 1
                current++;
                // si pattern respecté
                if (pattern.length === current) {
                    current = 0;
                    if(getComputedStyle(licorne).display !== "none"){
                        licorne.style.display = "none";
                    }else{
                        licorne.style.display ='block';
                    }
                }
            };
            // permet la récupération des touches
            document.addEventListener('keydown', keyHandler, false);
        </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>
</html>

